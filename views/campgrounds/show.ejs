<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-sm btn-default" href="/campgrounds">Back to profiles</a>
            <div class="list-group">
                <h3 id="left-show-h3-top"><i class="fa fa-instagram" aria-hidden="true"></i> /<%= campground.instaHandle %></h3>
                <h3><i class="fa fa-twitter" aria-hidden="true"></i> /<%= campground.twitterHandle %></h3>
                <h5>Located <%= campground.currentCity %>, <%= campground.currentCountry %></h5>
            </div>
        </div>
        <div class="col-md-9">
            <h1 class="show-name">MEET <%=campground.name%></h1>
            <h4 id="mtp-h4"><%= campground.role %> @ <strong><%= campground.venue %></strong></h4>
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <strong><p>So tell us a little about yourself <%=campground.name%></p></strong>
                    <p><%= campground.description %></p>
                    <strong><p>Tell us your greatest hospo story</p></strong>
                    <p><%= campground.greatestStory %></p>
                    <strong><p>Tell us your top 3 achievements you are most proud of</p></strong>
                    <p><%= campground.achievements %></p>
                    <strong><p>What about the top 3 things you're passionate about</p></strong>
                    <p><%= campground.passionateAbout %></p>
                    <strong><p>What is it you love about your industry and job?</p></strong>
                    <p><%= campground.industryLove %></p>
                    <strong><p>What is it you would like to improve in your industry?</p></strong>
                    <p><%= campground.industryImprove %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a class="btn btn-mtp-black" href="/campgrounds/<%= campground._id %>/comments/new">Add a comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                Edit
                            </a>
                            <form id="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>    
            </div>
        </div>
    </div>
</div>    

<% include ../partials/footer %>