<% include ../partials/header %>
<div class="container">
<a id="show-btn" class="btn btn-secondary btn-sm" href="/jobs">Back to jobs list</a>
    <div class="row">
        <div class="col-md-6 offset-md-3" style="text-align: center;" >
            <h1 id="mtp-h1">Edit the <%= jobs.jobRole %> job post</h1>
            <p>Make it special. You want the best people</p>
            <br>
        </div>
    </div>
    <div>
        <form action="/jobs/<%= jobs._id %>?_method=PUT" method="POST">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label>Job role</label>
                    <input class="form-control" type="text" name="jobs[jobRole]" value="<%= jobs.jobRole %>">
                </div>
                <div class="form-group">
                    <label>Business Name</label>
                    <input class="form-control" type="text" name="jobs[jobVenueName]" value="<%= jobs.jobVenueName %>">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input class="form-control" type="text" name="jobs[jobLocation]" value="<%= jobs.jobLocation %>">
                    <input class="form-control" type="text" name="jobs[jobCountry]" value="<%= jobs.jobCountry %>">
                </div>
                <div class="form-group">
                    <label>Start Date</label>
                    <input class="form-control" type="text" name="jobs[jobStartDate]" value="<%= jobs.jobStartDate %>">
                </div>
                <div class="form-group">
                    <label>Job Contact</label>
                    <input class="form-control" type="text" name="jobs[jobContactName]" value="<%= jobs.jobContactName %>">
                    <input class="form-control" type="text" name="jobs[jobContactPhone]" value="<%= jobs.jobContactPhone %>">
                    <input class="form-control" type="email" name="jobs[jobContactEmail]" value="<%= jobs.jobContactEmail %>">
                </div>
                <div class="form-group">
                    <label>Job Description</label>
                    <input class="form-control" type="text" name="jobs[jobDesc]" value="<%= jobs.jobDesc %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>