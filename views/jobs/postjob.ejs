<% include ../partials/header %>
<div class="container">
    <div class="row">
        <a id="profiles-back-btn" class="btn btn-sm btn-default" href="/jobs">Go back</a>
        <h1 class="show-name-create">Create a job ad</h1>
        <p id="mtp-h4-index" style="text-align: center">Make it special. You want the best people</p>
            <form action="/jobs" method="POST">
                <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                        <label>Job role</label>
                        <input class="form-control" type="text" name="jobRole" placeholder="Job title can be creative of course">
                    </div>
                    <div class="form-group">
                        <label>Business Name</label>
                        <input class="form-control" type="text" name="jobVenueName" placeholder="Best place to work I'm sure">
                    </div>
                    <div class="form-group">
                        <label>Job Description</label>
                        <textarea class="form-control" rows="5" type="text" name="jobDescription" placeholder="Tell us what you are looking for"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-mtp-black btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>